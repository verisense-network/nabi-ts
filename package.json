    "build:explorer": "vite build"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "vite": "^6.3.5",
    "vue": "^3.5.14"
  },
  "dependencies": {
    "@polkadot/api": "^16.0.1",
    "@polkadot/types": "^16.0.1",
    "@polkadot/types-codec": "^16.0.1",
    "commander": "^14.0.0",
    "svelte": "^4.2.7",
    "sirv": "^2.0.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "bin": {
    "nabi-ts": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
